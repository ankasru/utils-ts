{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": false,
        "declaration": true,
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": ["src", "vite.config.ts", "vitest.config.ts"],
    "exclude": ["node_modules", "dist", "*.test.ts"]
}